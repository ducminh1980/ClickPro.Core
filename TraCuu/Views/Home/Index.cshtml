                            <option value="8">Chi nhánh Quận 8</option>
                            <option value="9">Chi nhánh Quận 9</option>
                            <option value="32">Chi nhánh Sa Đéc</option>
                            <option value="29">Chi nhánh Tân An</option>
                            <option value="21">Chi nhánh Tân Phú</option>
                            <option value="37">Chi nhánh Tây Ninh</option>
                            <option value="20">Chi nhánh Thủ Dầu Một</option>
                            <option value="22">Chi nhánh Thủ Đức</option>
                            <option value="35">Chi nhánh Thuận An</option>
                            <option value="31">Chi nhánh Trung An</option>
                            <option value="36">Chi nhánh Vĩnh Long</option>
                        </select>
                    </div>
                </div>

                <div class="dx-clearfix"></div>
                <div class="row">
                    <div class="col-xl-5 col-lg-5 col-md-6 col-12 text-lable">
                        <label class="form-check-label" id="cmnd">CMND\CCCD:</label>
                    </div>
                    <div class="col-xl-7 col-lg-7 col-md-6 col-12 text-input">
                        <input  type="number" asp-for="CMND" name="CMND" class="form-control" placeholder="nhập CMND\CCCD...">
                    </div>
                </div>
                <div class="dx-clearfix"></div>
                <div class="row">
                    <div class="col-xl-5 col-lg-5 col-md-6 col-12 text-lable">
                        <label class="form-check-label">Mã khách hàng:</label>
                    </div>
                    <div class="col-xl-7 col-lg-7 col-md-6 col-12 text-input">
                        <input  type="text" asp-for="MaKhachHang" name="MaKhachHang" class="form-control" placeholder="nhập mã khách hàng...">
                    </div>
                </div>
                <div class="dx-clearfix"></div>
                <div class="row">
                    <div class="col-xl-5 col-lg-5 col-md-6 col-12 text-lable">
                        <captcha id="registerCapcha" user-input-id="CaptchaCode" image-width="200" image-height="50" image-style="Halo" />
                    </div>
                    <div class="col-xl-7 col-lg-7 col-md-6 col-12 text-input">
                        <input  type="text" asp-for="CaptchaCode" name="CaptchaCode" class="form-control" placeholder="nhập mã xác nhận...">
                    </div>
                </div>
                <div class="col-xl-12">

                </div>
                <div class="dx-clearfix"></div>
                <div class="row">
                    <div class="col-xl-8 col-lg-8 col-md-8 col-8 ">
                        <div asp-validation-summary="All" style="font-size:12px !important;" class="text-danger" ></div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-4 col-4 text-btn">
                        <div class="submit-text">
                            <button type="submit" style="font-size:12px !important;" class="btn btn-primary">Tiếp tục </button>
                        </div>
                    </div>
                </div>


            </form>


        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("a[title ~= 'BotDetect']").removeAttr("style");
            $("a[title ~= 'BotDetect']").removeAttr("href");
            $("a[title ~= 'BotDetect']").css('visibility', 'hidden');
        });
        $("input[type='radio']").change(function () {
            var rd = document.getElementById('tochuc');
            var rd1 = document.getElementById('canhan');
            if (rd.checked == true) {
                $("#cmnd").text("CMND\\CCCD người đại diện ký hợp đồng:")
            }
            if (rd1.checked == true) {
                $("#cmnd").text("CMND\\CCCD:")
            }
        });
