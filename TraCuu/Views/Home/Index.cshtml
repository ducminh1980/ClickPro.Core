                            <option value="34">Chi nhánh Bến Tre</option>
                            <option value="25">Chi nhánh Biên Hòa</option>
                            <option value="30">Chi nhánh Biên Hòa Đông</option>
                            <option value="23">Chi nhánh Bình Chánh</option>
                            <option value="13">Chi nhánh Bình Tân</option>
                            <option value="14">Chi nhánh Bình Thạnh</option>
                            <option value="33">Chi nhánh Cần Đước</option>
                            <option value="15">Chi nhánh Cần Giờ</option>
                            <option value="24">Chi nhánh Cao Lãnh</option>
                            <option value="38">Chi nhánh Châu Thành</option>
                            <option value="16">Chi nhánh Củ Chi</option>
                            <option value="26">Chi nhánh Đức Hòa</option>
                            <option value="17">Chi nhánh Gò Vấp</option>
                            <option value="18">Chi nhánh Hóc Môn</option>
